<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sharangirdhani.inclass09.ChatroomActivity">


    <TextView
        android:id="@+id/tvThreadName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imgHome"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/tvThreadName"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvThreadName"
        android:layout_marginEnd="23dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/home" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chatRV"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtMsg"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="19dp"
        android:ems="10"
        android:hint="Type message to send"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <ImageButton
        android:id="@+id/btnSend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/txtMsg"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtMsg"
        android:layout_marginEnd="11dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/send" />
</RelativeLayout>
